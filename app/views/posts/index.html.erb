<h3>レビュー一覧表</h3>

<table>
  <thead>
    <tr>
      <th>レビュー内容</th>
      <th>レビューした日付</th>
      <th>投稿者（User _id)</th>
      <th>投稿者の名前</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= post.user_id %></td>
        <td><%= post.nickname %></td>
        <td>
          <%= link_to "詳細", post %>
        </td>
        <td>
          <%= link_to "編集", [:edit, post] %>
        </td>
        <td>
          <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>  
</table>

<p><%= link_to "料理の一覧表", cooks_path %></p>
<p><%= link_to "トップページ", root_path %></p>