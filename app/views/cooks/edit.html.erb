<h3>料理の編集</h3>

<%= form_with model: @cook do |f| %>
  <table>
    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_area :name %></td>
    </tr>
    <tr>
      <th><%= f.label :image, "料理の写真" %></th>
      <td>
        <img src="<%= @cook.image %>" class="cook-image"><br>
        <%= f.file_field :image %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :point, "料理のポイント" %> </th>
      <td><%= f.text_area :point %></td>
    </tr>
    <tr>
      <th><%= f.label :ingredient, "材料" %></th>
      <td><%= f.text_area :ingredient %></td>
    </tr>
    <tr>
      <th><%= f.label :recipe, "作り方" %></th>
      <td><%= f.text_area :recipe %></td>
    </tr>
    <tr>
      <th><%= f.label :time, "料理にかかった時間" %></th>
      <td><%= f.text_field :time %></td>
    </tr>
    <tr>
      <th><%= f.label :target_cook, "料理の分類" %></th>
      <td>
         <%= f.radio_button(:target_cook, "指定なし") %>指定なし
         <%= f.radio_button(:target_cook, "和風") %>和風
         <%= f.radio_button(:target_cook, "洋風") %>洋風
         <%= f.radio_button(:target_cook, "中華") %>中華
         <%= f.radio_button(:target_cook, "肉類") %>肉類
         <%= f.radio_button(:target_cook, "魚類") %>魚類
         <%= f.radio_button(:target_cook, "卵") %>卵
         <%= f.radio_button(:target_cook, "菓子類") %>菓子類
         <%= f.radio_button(:target_cook, "野菜") %>野菜
         <%= f.radio_button(:target_cook, "ご飯もの") %>ご飯もの
         <%= f.radio_button(:target_cook, "パン") %>パン
         <%= f.radio_button(:target_cook, "麺類") %>麺類
         <%= f.radio_button(:target_cook, "お弁当") %>お弁当
      </td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "料理の一覧表に戻る", cooks_path %></li>
      <li><%= link_to "料理の詳細ページに戻る", cook_path %></li>
    </ul>
  </div>
<% end %>