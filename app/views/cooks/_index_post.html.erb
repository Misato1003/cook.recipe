<h3>レビュー一覧表</h3>
<table>
  <thead>
    <tr>
      <th>レビュー内容</th>
      <th>レビューした日付</th>
      <th>投稿者（User _id)</th>
      <th>投稿者の名前</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= post.user_id %></td>
        <td><%= post.nickname %></td>
      </tr>
    <% end %>
  </tbody>
</table>